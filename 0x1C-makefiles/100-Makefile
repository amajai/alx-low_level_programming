CC = gcc
SRC = main.c school.c
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: main.o school.o
	$(CC) -o $@ $^

main.o: main.c m.h
	$(CC) $(CFLAGS) -c -o $@ $< 

school.o: school.c m.h
	$(CC) $(CFLAGS) -c -o $@ $< 

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) main.o school.o

fclean: clean oclean

re: oclean all
